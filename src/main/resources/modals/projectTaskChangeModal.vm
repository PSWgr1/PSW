<div class="modal fade" id="projectTaskChangeModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Change task.</h4>
            </div>
            <div class="modal-body">
                <form action="/projectTaskChange" method="post">
                    <div class="form-group">
                        <label for="assigneeLogin">Assignee:</label>
                        <select class="form-control" name="assigneeLogin">
                            #foreach($membership in $project.memberships)
                                <option value="$membership.userLogin">$membership.userLogin</option>
                            #end
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="expiration">Expiration:</label>
                        <input class="form-control" type="date" name="expiration" value="$task.expirationDate">
                    </div>

                    <div class="form-group">
                        <label for="status">Status:</label>
                        <select class="form-control" name="status">
                                <option value="IN_PROGRESS">IN_PROGRESS</option>
                                <option value="DONE">DONE</option>
                        </select>
                    </div>
                    <input type="hidden" name="taskName" value="$task.name">
                    <input type="hidden" name="projectName" value="$project.name">
                    <button type="submit" class="btn btn-primary">Change</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
