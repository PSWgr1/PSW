<div class="modal fade" id="projectTaskCreationModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add project task.</h4>
            </div>
            <div class="modal-body">
                <form action="/projectTaskCreation" method="post">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter name" name="name">
                    </div>

                    <div class="form-group">
                        <label for="description">Description:</label>
                        <input type="text" class="form-control" id="description" placeholder="Enter description" name="description">
                    </div>

                    <div class="form-group">
                        <label for="assigneeLogin">Assignee:</label>
                        <select class="form-control" name="assigneeLogin">
                            #foreach($membership in $project.memberships)
                                <option value="$membership.userLogin">$membership.userLogin</option>
                            #end
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="expiration">Expiration:</label>
                        <input class="form-control" type="date" name="expiration">
                    </div>

                    <input type="hidden" name="projectName" value="$project.name">
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
